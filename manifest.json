{
  "manifest_version": 3,
  "name": "Fixorium Wallet",
  "version": "1.0",
  "description": "Fixorium Wallet - secure Solana-based wallet embedded inside Chrome popup.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon3.png",
      "48": "icon3.png",
      "128": "icon3.png"
    }
  },
  "host_permissions": [
    "https://wallet.fixorium.com.pk/*"
  ],
  "icons": {
    "16": "icon3.png",
    "48": "icon3.png",
    "128": "icon3.png"
  }
}
